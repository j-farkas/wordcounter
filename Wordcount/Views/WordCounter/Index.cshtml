
<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Wordcounter</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>

  <body>
    <div class="container">
      <h1 class="text-center">Word Counter</h1><br>
      @foreach(var words in Model)
      {
      <a href=/game/@words.GetId()>The word "@words.GetCompare()" appears @words.Count() times in the phrase "@words.GetTo()"</a><br>
      }
      <form action="/game/delete" method="post">
      <button type="submit">Delete All Entries</button>
      </form>
      <a href='/game/add'>Add a new set of words</a><br>
    </div>
    @{Html.RenderPartial("MyPartial"); } 
  </body>
</html>
